<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ff000000"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/text_upgrade"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="false"
        android:cropToPadding="false"
        android:contentDescription="upgrades_title"
        android:layout_margin="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:id="@+id/linearLayout9"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cash"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text_cash" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/cashTxt"
            android:textColor="#6FCCDC"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:text="cash"
            android:textSize="40sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearLayout9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:fadeScrollbars="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:padding="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gunsTxt"
                        android:background="@drawable/text_guns"
                        android:layout_gravity="center|right"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gunsBtn"
                        style="@style/AppTheme"
                        android:background="@drawable/btn_buy_xml"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/gunsLvlTxt"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:text="@string/upgrade_level"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="91dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/gunsRadio"
                        android:layout_toStartOf="@+id/gunsRadio" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/gunsRadio"
                        android:background="@drawable/radio_lvl1"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:text="@string/upgrade_price"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/gunsLvlTxt"
                        android:layout_alignStart="@+id/gunsLvlTxt"
                        android:layout_below="@+id/gunsLvlTxt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/gunsPrice"
                        android:textColor="#6FCCDC"
                        android:text="price"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:fontFamily="Space Age"
                        android:layout_alignParentBottom="true"
                        android:layout_alignLeft="@+id/gunsRadio"
                        android:layout_alignStart="@+id/gunsRadio" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:background="@drawable/text_engine"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/engineBtn"
                        android:background="@drawable/btn_buy_xml"
                        android:layout_gravity="center"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout3"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/upgrade_level"
                        android:id="@+id/engineLvlTxt"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="91dp"
                        android:layout_alignParentTop="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/engineRadio"
                        android:background="@drawable/radio_lvl1"
                        android:layout_weight="1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView2"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:text="@string/upgrade_price"
                        android:layout_below="@+id/engineLvlTxt"
                        android:layout_alignRight="@+id/engineLvlTxt"
                        android:layout_alignEnd="@+id/engineLvlTxt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/enginePrice"
                        android:textColor="#6FCCDC"
                        android:text="price"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:fontFamily="Space Age"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/engineLvlTxt"
                        android:layout_alignLeft="@+id/engineRadio"
                        android:layout_alignStart="@+id/engineRadio" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:weightSum="1"
                    android:gravity="start|center_horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView8"
                        android:background="@drawable/text_shield"
                        android:layout_gravity="center"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="0dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="0dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shieldBtn"
                        android:background="@drawable/btn_buy_xml"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="false"
                        android:layout_alignParentBottom="false"
                        android:layout_alignWithParentIfMissing="false" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout4"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/upgrade_level"
                        android:id="@+id/shieldLvlTxt"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:layout_marginRight="91dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/shieldRadio"
                        android:layout_toStartOf="@+id/shieldRadio"
                        android:layout_marginEnd="91dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shieldRadio"
                        android:background="@drawable/radio_lvl1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/textView4"
                        android:textColor="#6FCCDC"
                        android:textSize="30sp"
                        android:text="@string/upgrade_price"
                        android:layout_gravity="center"
                        android:layout_alignLeft="@+id/shieldLvlTxt"
                        android:layout_alignStart="@+id/shieldLvlTxt"
                        android:layout_below="@+id/shieldLvlTxt" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/shieldPrice"
                        android:textColor="#6FCCDC"
                        android:text="price"
                        android:layout_gravity="center"
                        android:gravity="center_vertical|center_horizontal"
                        android:fontFamily="Space Age"
                        android:layout_below="@+id/shieldRadio"
                        android:layout_toRightOf="@+id/shieldLvlTxt"
                        android:layout_toEndOf="@+id/shieldLvlTxt" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backBtn"
                    android:background="@drawable/btn_back_xml"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resetBtn"
                    android:background="@drawable/btn_reset_xml"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#f0131517"
        android:id="@+id/resetView"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Are you sure you want to reset?"
            android:id="@+id/textView5"
            android:textColor="#ff5499a8"
            android:textSize="35sp"
            android:layout_above="@+id/yesBtn"
            android:layout_centerHorizontal="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noBtn"
            android:background="@drawable/btn_no_xml"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yesBtn"
            android:background="@drawable/btn_yes_xml"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

    </RelativeLayout>

</RelativeLayout>